.scene-general
  position relative
  padding 15px 15px 40px
  background #f7f7f7
  box-shadow 0 -1px 4px 0 rgba(0, 0, 0, 0.5)
  border-bottom 1px solid #ebebeb
  z-index 80
  +print()
    padding 0
    box-shadow none
    border-bottom none
  &__content
    max-width 700px
    margin 0 auto
    +print()
      max-width none
