.indicator
  position relative
  top 50%
  left 50%
  transform translate(-20px, -18px)
  z-index 500
  &__item
    width 0
    height 0
    border 0 solid transparent
    position absolute
    border-left-width 10px
    border-right-width 10px
    border-bottom-width 18px
    animation-name indicator
    animation-duration 0.6s
    animation-iteration-count infinite
    &:nth-child(1)
      top 0
      left 10px
      border-bottom-color rgb(215, 32, 67)
      animation-delay 0
    &:nth-child(2)
      top 18px
      left 20px
      border-bottom-color rgb(193, 61, 91)
      animation-delay 0.2s
    &:nth-child(3)
      top 18px
      left 0
      border-bottom-color rgb(230, 46, 81)
      animation-delay 0.4s

@keyframes indicator
  0%
    opacity 1
  40%
    opacity 0.4
  100%
    opacity 1
