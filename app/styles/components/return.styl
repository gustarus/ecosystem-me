.return
  display block
  width 100%
  height 50px
  left 0
  top 0
  background rgba(17, 17, 17, .1)
  transition background-color .2s
  box-shadow none
  z-index 500
  &:hover
    background rgba(17, 17, 17, .3)
    box-shadow none
  &__house
    display block
    width 24px
    height 24px
    margin-top -12px
    margin-left -12px
    position absolute
    left 50%
    top 50%
  &[data-theme="dark"] &__house
    fill #333
  &[data-theme="light"] &__house
    fill #fff

